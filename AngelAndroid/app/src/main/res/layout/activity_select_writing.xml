<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="500"
    android:background="#FFFFFF">

    <RelativeLayout
        android:background="#CCEAF2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="249.5">

        <ImageView
            android:id="@+id/select_praise_img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:src="@drawable/smile_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/select_praise_guide"
            android:layout_below="@id/select_praise_img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14.3dp"
            android:text="무엇이든 이야기 해보세요"
            android:textColor="#656766"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <RelativeLayout
        android:background="#CCEAF2"
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="249.5">

        <ImageView
            android:src="@drawable/sad_icon"
            android:layout_marginTop="50dp"
            android:id="@+id/select_proud_img"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/select_proud_guide"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/select_proud_img"
            android:text="무엇이 당신을 힘들게 하나요?"
            android:layout_marginTop="14.3dp"
            android:textColor="#656766"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>