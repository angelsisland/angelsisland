<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="228.3dp"
    android:layout_height="162.3dp"
    android:background="@drawable/white_box">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/white_box"/>

    <TextView
        android:id="@+id/dialog_opening_text"
        android:text="천사의 이름은\n무엇 인가요?"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/dialog_opening_edit_container"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/dialog_opening_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/name_box"
            android:src="@drawable/name_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/dialog_opening_name_edit"
            android:layout_toLeftOf="@+id/extra_conform_box"
            android:layout_marginRight="1dp"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:background="@null"
            android:layout_width="107dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#414141"
            />

        <RelativeLayout
            android:id="@+id/extra_conform_box"
            android:layout_alignRight="@+id/name_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/dialog_opening_commit"
                android:src="@drawable/dialog_opening_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="확 인"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/dialog_opening_next_button"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="33.3dp">
        <ImageView
            android:id="@+id/dialog_opening_arrow"
            android:visibility="gone"
            android:background="@drawable/arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </RelativeLayout>


</RelativeLayout>