<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/blue_body"
        android:layout_above="@+id/white_wave"
        android:src="@drawable/back_island"
        android:layout_marginBottom="-21dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/white_wave"
        android:layout_alignParentBottom="true"
        android:src="@drawable/wave_white_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/white_wave2"
        android:src="@drawable/wave_white_2"
        android:layout_marginLeft="-360dp"
        android:layout_alignTop="@+id/white_wave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/cloud_left"
        android:src="@drawable/cloud_left"
        android:layout_marginTop="19dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/cloud_middle"
        android:src="@drawable/cloud_middel"
        android:layout_below="@+id/cloud_right"
        android:layout_marginTop="5dp"
        android:layout_marginRight="70dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/cloud_right"
        android:src="@drawable/cloud_right"
        android:layout_alignParentRight="true"
        android:layout_marginTop="38.3dp"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/main_praise1"
        android:layout_centerHorizontal="true"
        android:src="@drawable/good_job"
        android:layout_alignTop="@+id/blue_body"
        android:layout_marginTop="-90dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/main_praise2"
        android:src="@drawable/hand"
        android:layout_below="@id/main_praise1"
        android:layout_marginLeft="29dp"
        android:layout_marginBottom="66.6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/main_praise3"
        android:src="@drawable/song"
        android:layout_alignBottom="@+id/main_praise2"
        android:layout_alignParentRight="true"
        android:layout_marginRight="29dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>