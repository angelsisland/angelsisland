<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="228dp" android:layout_height="162dp"
    android:background="@drawable/dialog_box"
    >
    <ImageView
        android:src="@drawable/dialog_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:id="@+id/dialog_after_close_button"
        android:layout_alignLeft="@+id/dialog_after_close"
        android:layout_marginLeft="-10dp"
        android:layout_marginTop="5dp"
        android:layout_width="35dp"
        android:layout_height="35dp">
        </RelativeLayout>
    <ImageView
        android:id="@+id/dialog_after_close"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/close_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/good_words"
        android:text="어느 생인들 아프지 않으며,\n어느 생인들 아름답지 않으리"
        android:lineSpacingExtra="8dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textColor="#5B5B5B"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>