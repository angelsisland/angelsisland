<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="#FFFFFF">

    <RelativeLayout
        android:id="@+id/my_page_received_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31.3dp"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/my_page_received_praise"
            android:background="@drawable/mypage_goodjob_icon"
            android:layout_marginRight="13.3dp"
            android:text="내가 받은 칭찬"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/my_page_received_comfort"
            android:text="내가 받은 위로"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/mypage_cheerup_icon"
            android:layout_toRightOf="@id/my_page_received_praise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>


    <ImageView
        android:id="@+id/my_page_background"
        android:background="@drawable/back_island"
        android:layout_below="@+id/my_page_received_box"
        android:layout_marginTop="91.3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/my_page_background_wave"
        android:layout_alignBottom="@id/my_page_background"
        android:src="@drawable/wave_white_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/my_page_background_wave2"
        android:layout_alignTop="@id/my_page_background_wave"
        android:layout_marginLeft="-360dp"
        android:src="@drawable/wave_white_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/my_page_profile_img"
        android:layout_centerInParent="true"
        android:layout_alignTop="@id/my_page_background"
        android:layout_marginTop="-12dp"
        android:src="@drawable/baby_q"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/my_page_profile_plus"
        android:src="@drawable/plus_icon"
        android:layout_toRightOf="@+id/my_page_profile_img"
        android:layout_alignBottom="@id/my_page_profile_img"
        android:layout_marginBottom="-5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="NOTHING"
        android:textSize="23sp"
        android:layout_marginTop="11dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/my_page_profile_img"
        android:id="@+id/my_page_status_nick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ProgressBar
        android:id="@+id/my_page_level_progress"
        style="@style/CustomProgressBarHorizontal"
        android:layout_centerHorizontal="true"
        android:visibility="visible"
        android:layout_below="@id/my_page_status_nick"
        android:layout_marginTop="15.6dp"
        android:progressDrawable="@drawable/level_progressbar"
        android:background="@drawable/levelup_zero"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:max="100"
        android:progress="50"/>

    <RelativeLayout
        android:id="@+id/my_page_remain_wings"
        android:layout_below="@id/my_page_level_progress"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/my_page_next_status"
            android:text="Kid Angel"
            android:textColor="#5B5B5B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/my_page_next_status_deco"
            android:layout_toRightOf="@+id/my_page_next_status"
            android:layout_centerHorizontal="true"
            android:text=" 까지 남은 깃털 "
            android:textColor="#B1B1B1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/my_page_next_status_remain"
            android:text="100"
            android:textColor="#5B5B5B"
            android:layout_toRightOf="@id/my_page_next_status_deco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_toRightOf="@+id/my_page_next_status_remain"
            android:text=" 개"
            android:textColor="#B1B1B1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>



</RelativeLayout>